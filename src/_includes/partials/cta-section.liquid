<!--
  Call to Action Section Component

  Usage:
  {% render 'partials/cta-section',
    title: 'Ready to Get Started?',
    description: 'Let\'s discuss your project and see how I can help bring your vision to life.',
    buttonText: 'Start Your Project',
    buttonUrl: 'mailto:hello@omaralmasry.com?subject=New Project Inquiry',
    customClasses: 'my-16'
  %}

  Parameters:
  - title (required): H2 title text
  - description (required): CTA description text
  - buttonText (required): Button/link text
  - buttonUrl (required): Button/link URL (can be mailto: links)
  - customClasses (optional): Additional CSS classes
  - variant (optional): 'default', 'centered', or 'minimal' (defaults to 'default')
-->

<section class="py-12 px-[5%] {{ customClasses | default: '' }}">
  <div class="container mx-auto">
    {% if variant == 'centered' %}
      <!-- Centered variant with background -->
      <div class="bg-normal border border-normal rounded-lg p-8 md:p-12 text-center shadow-low dark:bg-inverted dark:border-inverted dark:shadow-lowInverted">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h2>
        <p class="text-lg md:text-xl text-normalLight dark:text-invertedLight mb-8 max-w-2xl mx-auto">
          {{ description }}
        </p>
        <a
          href="{{ buttonUrl }}"
          class="inline-flex items-center px-6 py-3 bg-primary text-lg text-inverted font-medium rounded-lg shadow-low no-underline transition duration-300 hover:bg-normalLight hover:text-normal focus:ring focus:ring-primary/30 dark:bg-primaryInverted dark:text-normal dark:hover:bg-invertedLight dark:hover:text-inverted dark:shadow-lowInverted dark:focus:ring-primaryInverted/30"
          {% if buttonUrl contains 'mailto:' %}
            aria-label="Send email to {{ buttonText }}"
          {% else %}
            aria-label="{{ buttonText }}"
          {% endif %}
        >
          <span>{{ buttonText }}</span>
          {% if buttonUrl contains 'mailto:' %}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 ml-2 fill-current"
              role="img"
              aria-hidden="true"
              viewBox="0 0 256 256"
            >
              <path d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48ZM98.71,128,40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05L203,208H53ZM157.29,128,216,74.19V181.81Z"></path>
            </svg>
          {% else %}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 ml-2 fill-current"
              role="img"
              aria-hidden="true"
              viewBox="0 0 256 256"
            >
              <path d="M200,64V168a8,8,0,0,1-16,0V83.31L69.66,197.66a8,8,0,0,1-11.32-11.32L172.69,72H88a8,8,0,0,1,0-16H192A8,8,0,0,1,200,64Z"></path>
            </svg>
          {% endif %}
        </a>
      </div>
    {% elsif variant == 'minimal' %}
      <!-- Minimal variant -->
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h2>
        <p class="text-lg md:text-xl text-normalLight dark:text-invertedLight mb-6">{{ description }}</p>
        <a
          href="{{ buttonUrl }}"
          class="inline-flex items-center text-lg font-medium text-primary no-underline hover:text-normalLight transition duration-300 dark:text-primaryInverted dark:hover:text-invertedLight"
          {% if buttonUrl contains 'mailto:' %}
            aria-label="Send email to {{ buttonText }}"
          {% else %}
            aria-label="{{ buttonText }}"
          {% endif %}
        >
          <span>{{ buttonText }}</span>
          {% if buttonUrl contains 'mailto:' %}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 ml-2 fill-current"
              role="img"
              aria-hidden="true"
              viewBox="0 0 256 256"
            >
              <path d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48ZM98.71,128L40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05L203,208H53ZM157.29,128,216,74.19V181.81Z"></path>
            </svg>
          {% else %}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 ml-2 fill-current"
              role="img"
              aria-hidden="true"
              viewBox="0 0 256 256"
            >
              <path d="M200,64V168a8,8,0,0,1-16,0V83.31L69.66,197.66a8,8,0,0,1-11.32-11.32L172.69,72H88a8,8,0,0,1,0-16H192A8,8,0,0,1,200,64Z"></path>
            </svg>
          {% endif %}
        </a>
      </div>
    {% else %}
      <!-- Default variant -->
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h2>
            <p class="text-lg md:text-xl text-normalLight dark:text-invertedLight">{{ description }}</p>
          </div>
          <div class="flex justify-start lg:justify-end">
            <a
              href="{{ buttonUrl }}"
              class="inline-flex items-center px-6 py-3 bg-primary text-lg text-inverted font-medium rounded-lg shadow-low no-underline transition duration-300 hover:bg-normalLight hover:text-normal focus:ring focus:ring-primary/30 dark:bg-primaryInverted dark:text-normal dark:hover:bg-invertedLight dark:hover:text-inverted dark:shadow-lowInverted dark:focus:ring-primaryInverted/30"
              {% if buttonUrl contains 'mailto:' %}
                aria-label="Send email to {{ buttonText }}"
              {% else %}
                aria-label="{{ buttonText }}"
              {% endif %}
            >
              <span>{{ buttonText }}</span>
              {% if buttonUrl contains 'mailto:' %}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-5 h-5 ml-2 fill-current"
                  role="img"
                  aria-hidden="true"
                  viewBox="0 0 256 256"
                >
                  <path d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48ZM98.71,128L40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05L203,208H53ZM157.29,128,216,74.19V181.81Z"></path>
                </svg>
              {% else %}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="w-5 h-5 ml-2 fill-current"
                  role="img"
                  aria-hidden="true"
                  viewBox="0 0 256 256"
                >
                  <path d="M200,64V168a8,8,0,0,1-16,0V83.31L69.66,197.66a8,8,0,0,1-11.32-11.32L172.69,72H88a8,8,0,0,1,0-16H192A8,8,0,0,1,200,64Z"></path>
                </svg>
              {% endif %}
            </a>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>
