<section class="cta-grid-container relative py-16 px-[5%] overflow-hidden">
  <!-- Animated Grid Background -->
  <div class="cta-grid absolute inset-0 grid grid-cols-20 grid-rows-20">
    {% for i in (1..400) %}
      <div class="cta-grid-item"></div>
    {% endfor %}
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto max-w-6xl h-full flex items-center">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center w-full">
      <!-- Left: Title and Subtext -->
      <div>
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-normal">
          {{ title | default: "Let's work together" }}
        </h2>
        <p class="text-xl md:text-2xl text-normal opacity-90">
          {{ subtext | default: "I'm currently available for full-time roles and select freelance projects." }}
        </p>
      </div>

      <!-- Right: Button -->
      <div class="flex justify-start lg:justify-end">
        <a
          href="{{ buttonUrl | default: 'mailto:hello@omaralmasry.com?subject=Project%20Inquiry' }}"
          class="inline-flex items-center px-8 py-4 bg-inverted text-normal font-medium text-lg rounded-full shadow-high no-underline transition duration-300 hover:scale-105"
        >
          <span class="text-inverted">{{ buttonText | default: 'Send me an email' }}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5 ml-2 fill-current text-inverted"
            viewBox="0 0 256 256"
          >
            <path d="M224,56l-96,88L32,56Z" opacity="0.2"></path>
            <path d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48Zm-96,85.15L52.57,64H203.43ZM98.71,128,40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05,58,53.15H52.57ZM157.29,128,216,74.18V181.82Z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
