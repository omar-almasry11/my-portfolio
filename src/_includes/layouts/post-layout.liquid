layout: "/layouts/layout.liquid"
---
<article class="max-w-4xl mx-auto py-12 px-6">
  <header class="mb-8">
    <h1 class="text-4xl font-extrabold mb-2">{{ title }}</h1>
    <p class="text-2xl text-normalLight max-w-2xl mb-4 ml-0 text-normalLight dark:text-invertedLight">
      {{ description }}
    </p>
    <p class="text-md text-normalLight dark:text-invertedLight flex flex-wrap items-center gap-2 mb-8">
      <!-- Published On -->
      <span class="flex items-center gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6 text-primary fill-current dark:text-primaryInverted"
          role="img"
          aria-label="Published On Icon"
          viewBox="0 0 256 256"
        >
          <path d="M176,120c0,32-48,56-48,56s-48-24-48-56a24,24,0,0,1,48,0,24,24,0,0,1,48,0Z" opacity="0.2"></path>
          <path d="M208,32H184V24a8,8,0,0,0-16,0v8H88V24a8,8,0,0,0-16,0v8H48A16,16,0,0,0,32,48V208a16,16,0,0,0,16,16H208a16,16,0,0,0,16-16V48A16,16,0,0,0,208,32Zm0,176H48V48H72v8a8,8,0,0,0,16,0V48h80v8a8,8,0,0,0,16,0V48h24V208ZM152,88a31.91,31.91,0,0,0-24,10.86A32,32,0,0,0,72,120c0,36.52,50.28,62.08,52.42,63.16a8,8,0,0,0,7.16,0C133.72,182.08,184,156.52,184,120A32,32,0,0,0,152,88Zm-24,78.93c-13.79-7.79-40-26.75-40-46.93a16,16,0,0,1,32,0,8,8,0,0,0,16,0,16,16,0,0,1,32,0C168,140.19,141.79,159.15,128,166.93Z"></path>
        </svg>
        <span>Published on: {{ date | date: '%B %d, %Y' }}</span>
      </span>

      <!-- Separator -->
      <span class="hidden md:inline text-normalLight dark:text-invertedLight">|</span>

      <!-- Approximate Reading Time -->
      <span class="flex items-center gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 text-primary fill-current dark:text-primaryInverted"
          role="img"
          aria-label="Reading Time Icon"
          viewBox="0 0 256 256"
        >
          <path d="M216,136a88,88,0,1,1-88-88A88,88,0,0,1,216,136Z" opacity="0.2"></path>
          <path d="M128,40a96,96,0,1,0,96,96A96.11,96.11,0,0,0,128,40Zm0,176a80,80,0,1,1,80-80A80.09,80.09,0,0,1,128,216ZM173.66,90.34a8,8,0,0,1,0,11.32l-40,40a8,8,0,0,1-11.32-11.32l40-40A8,8,0,0,1,173.66,90.34ZM96,16a8,8,0,0,1,8-8h48a8,8,0,0,1,0,16H104A8,8,0,0,1,96,16Z"></path>
        </svg>
        <span>Reading time â‰ˆ <span id="reading-time">2</span> minutes</span>
      </span>
    </p>
  </header>
  <div class="prose dark:prose-inverted">
    {{ content | safe }}
  </div>
</article>

<script>
  // Calculate and display reading time
  document.addEventListener('DOMContentLoaded', () => {
    const readingTimeElement = document.getElementById('reading-time');
    if (readingTimeElement) {
      const blogContent = document.querySelector('article').innerText; // Assuming blog content is inside an <article> tag
      const words = blogContent.trim().split(/\s+/).length;
      const wordsPerMinute = 200; // Average reading speed (words per minute)
      const readingTime = Math.round(words / wordsPerMinute);
      readingTimeElement.textContent = readingTime; // Update the span with reading time
    }
  });
</script>
