<section class="py-24 px-[5%] {{ customClasses | default: '' }}">
  <div class="container mx-auto">
    <div class="max-w-3xl">
      {% if subheader %}
        <h2 class="text-4xl font-bold mb-2">
          {{ header | default: 'Default Header' }}
        </h2>
        <p class="text-2xl text-ebony mb-6">{{ subheader | default: 'Default Subheader' }}</p>
      {% else %}
        <h2 class="text-4xl font-bold mb-6">
          {{ header | default: 'Default Header' }}
        </h2>
      {% endif %}
      {{ content | safe }}
    </div>
  </div>
</section>
